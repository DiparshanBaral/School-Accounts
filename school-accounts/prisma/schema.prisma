// Prisma Schema for School Accounting System
// Uses PostgreSQL with strict Decimal types for all monetary values
// Designed to be extensible for future: fees, salary, multi-branch, PDF receipts

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─────────────────────────────────────────────
// ENUMS
// ─────────────────────────────────────────────

enum Role {
  ADMIN
  ACCOUNTANT
  VIEWER
}

enum TransactionType {
  INCOME
  EXPENSE
}

enum CategoryType {
  INCOME
  EXPENSE
}

enum StudentStatus {
  ACTIVE
  INACTIVE
}

enum PaymentMethod {
  CASH
  BANK
  ESEWA
  KHALTI
}

// ─────────────────────────────────────────────
// USER MODEL
// ─────────────────────────────────────────────

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String   // bcrypt hashed
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())

  // Relations
  transactions Transaction[] @relation("CreatedBy")

  @@map("users")
}

// ─────────────────────────────────────────────
// CATEGORY MODEL
// ─────────────────────────────────────────────

model Category {
  id        String       @id @default(uuid())
  name      String       @unique
  type      CategoryType
  createdAt DateTime     @default(now())

  // Relations
  transactions Transaction[]

  @@map("categories")
}

// ─────────────────────────────────────────────
// STUDENT MODEL
// ─────────────────────────────────────────────

model Student {
  id        String        @id @default(uuid())
  name      String
  class     String
  rollNo    String
  status    StudentStatus @default(ACTIVE)
  createdAt DateTime      @default(now())

  // Relations
  transactions Transaction[]

  @@unique([class, rollNo]) // Roll no is unique per class
  @@map("students")
}

// ─────────────────────────────────────────────
// TRANSACTION MODEL
// ─────────────────────────────────────────────
// CRITICAL: Never hard-delete. Use isVoided flag.
// CRITICAL: amount uses Decimal(12,2) — NEVER Float.

model Transaction {
  id              String          @id @default(uuid())
  type            TransactionType
  date            DateTime        @db.Date
  amount          Decimal         @db.Decimal(12, 2)
  categoryId      String
  studentId       String?
  paymentMethod   PaymentMethod   @default(CASH)
  referenceNumber String?
  description     String?
  isVoided        Boolean         @default(false)
  createdById     String
  createdAt       DateTime        @default(now())

  // Relations
  category  Category @relation(fields: [categoryId], references: [id])
  student   Student? @relation(fields: [studentId], references: [id])
  createdBy User     @relation("CreatedBy", fields: [createdById], references: [id])

  @@index([date])
  @@index([type])
  @@index([categoryId])
  @@index([studentId])
  @@index([isVoided])
  @@map("transactions")
}

// ─────────────────────────────────────────────
// OPENING BALANCE MODEL
// ─────────────────────────────────────────────

model OpeningBalance {
  id        String   @id @default(uuid())
  amount    Decimal  @db.Decimal(12, 2)
  date      DateTime @db.Date
  createdAt DateTime @default(now())

  @@map("opening_balances")
}

